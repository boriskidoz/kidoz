        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
        android:hardwareAccelerated="true"
        >
        <activity
            android:name="com.kidoz.sdk.sample.app.SampleActivity"
            android:label="@string/app_name"

